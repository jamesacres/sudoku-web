{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@sudoku-web/template": ["./src"],
      "@sudoku-web/template/*": ["./src/*"],
      "@sudoku-web/types": ["../../packages/types/src"],
      "@sudoku-web/types/*": ["../../packages/types/src/*"],
      "@sudoku-web/shared": ["../../packages/shared/src"],
      "@sudoku-web/shared/*": ["../../packages/shared/src/*"]
    },
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
