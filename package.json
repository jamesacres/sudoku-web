{
  "name": "sudoku-web",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.1",
  "author": "James Acres",
  "description": "Sudoku Race",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:sudoku": "turbo run dev --filter=@sudoku-web/app-sudoku",
    "dev:template": "turbo run dev --filter=@sudoku-web/app-template",
    "build": "turbo run build",
    "build:sudoku": "turbo run build --filter=@sudoku-web/app-sudoku",
    "build:sudoku:capacitor": ". ./scripts/buildCapacitor.sh sudoku",
    "build:sudoku:electron": "./scripts/buildElectron.sh sudoku",
    "build:template": "turbo run build --filter=@sudoku-web/app-template",
    "build:template:capacitor": ". ./scripts/buildCapacitor.sh template",
    "build:template:electron": "./scripts/buildElectron.sh template",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test -- --coverage",
    "test:ci": "turbo run test -- --coverage --ci --maxWorkers=2",
    "generate:icons": "npx @capacitor/assets generate --iconBackgroundColor '#eeeeee' --iconBackgroundColorDark '#222222' --splashBackgroundColor '#eeeeee' --splashBackgroundColorDark '#111111'"
  },
  "devDependencies": {
    "turbo": "^2.6.1"
  }
}
