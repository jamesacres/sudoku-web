{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@sudoku-web/auth": ["./packages/auth/src"],
      "@sudoku-web/auth/*": ["./packages/auth/src/*"],
      "@sudoku-web/ui": ["./packages/ui/src"],
      "@sudoku-web/ui/*": ["./packages/ui/src/*"],
      "@sudoku-web/sudoku": ["./packages/sudoku/src"],
      "@sudoku-web/sudoku/*": ["./packages/sudoku/src/*"],
      "@sudoku-web/template": ["./packages/template/src"],
      "@sudoku-web/template/*": ["./packages/template/src/*"],
      "@sudoku-web/types": ["./packages/types/src"],
      "@sudoku-web/types/*": ["./packages/types/src/*"],
      "@sudoku-web/shared": ["./packages/shared/src"],
      "@sudoku-web/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "electron",
    "dist",
    "ios",
    "android"
  ]
}